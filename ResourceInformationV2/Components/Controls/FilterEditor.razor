@if (Value != null && !string.IsNullOrWhiteSpace(Value.Title))
{
    <div class="filter-box">
        <div>
            <label for="filter-title-@Id">Title</label>
            <input id="filter-title-@Id" type="text" @bind="Value.Title" class="ils-input-long" />
        </div>
        <div class="button-group">
            <button class="ilw-button small" @onclick="MoveUp"><ilw-icon alt="up" size="24px" icon="back" class="rotate"></ilw-icon></button>
            <button class="ilw-button small" @onclick="MoveDown"><ilw-icon alt="down" size="24px" icon="next" class="rotate"></ilw-icon></button>
            <button class="ilw-button small" @onclick="Remove">Remove</button>
        </div>
    </div>
}
